<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
                <shape>
                    <corners 
                        android:radius="5dp" />
                    <solid 
                        android:color="#f0eff5" />
                </shape>
            </item>
    <item android:state_checked="true">
         <layer-list>
            <item>
                <shape>
                    <corners 
                        android:radius="5dp" />
                    <solid 
                        android:color="#ffffff" />
                    <stroke 
                        android:width="2px" 
                        android:color="#fed136" />
                </shape>
            </item>
            <item>
                <bitmap 
                    android:gravity="bottom|right" 
                    android:src="@drawable/repeat_checkbox_bg02" />
            </item>
        </layer-list>
    </item>
</selector>
