<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.tunasushi.tuna.TWrap
        android:id="@+id/tWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layerType="software"
        app:wrapBackgroundNormal="#ffffff"
        app:wrapBackgroundSelect="#ffffff"
        app:wrapSpacingLine="20dp"
        app:radius="5dp"
        app:wrapSpacingRow="10dp"
        app:wrapStrokeColorNormal="#cccccc"
        app:wrapStrokeColorSelect="#ff9933"
        app:wrapStrokeWidth="1dp"
        app:wrapTextColorNormal="#6e7080"
        app:wrapTextColorSelect="#ff9933"
        app:wrapTextSize="20dp" />

    <com.tunasushi.tuna.TView
        android:id="@+id/tView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/tWrap"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:strokeColorNormal="#bc7955"
        app:strokeWidthNormal="1dp"
        app:textColorNormal="#bc7955"
        app:textSize="16dp"
        app:textValue="SHOW RESULT" />

</RelativeLayout>