<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleTop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:textColorNormal="#592d2e"
        app:trangleBackgroundNormal="#fae500"
        app:trangleBackgroundPress="#d9c700"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="top" />

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleRight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/trangleTop"
        android:layout_toRightOf="@id/trangleTop"
        app:textColorNormal="#592d2e"
        app:trangleBackgroundNormal="#fae500"
        app:trangleBackgroundPress="#d9c700"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="right" />

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleBottom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/trangleRight"
        android:layout_toRightOf="@id/trangleRight"
        app:selectType="same"
        app:textColorNormal="#592d2e"
        app:trangleBackgroundNormal="#fae500"
        app:trangleBackgroundPress="#bc7955"
        app:trangleBackgroundSelect="#592d2d"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="bottom" />

    <com.tunasushi.tuna.TTrangleView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/trangleBottom"
        android:layout_toRightOf="@id/trangleBottom"
        app:selectType="same"
        app:textColorNormal="#592d2e"
        app:trangleBackgroundNormal="#fae500"
        app:trangleBackgroundPress="#bc7955"
        app:trangleBackgroundSelect="#592d2d"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="left" />

    <com.tunasushi.tuna.TView
        android:id="@+id/viewDialog"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_below="@id/trangleTop"
        android:layout_marginLeft="10dp"
        app:backgroundNormal="#fae500"
        app:strokeColorNormal="#592d2e"
        app:strokeWidthNormal="2dp"
        app:textColorNormal="#592d2d"
        app:textSize="10dp"
        app:textValue="TunaSashimi" />

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleDialog"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_below="@id/viewDialog"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="-4.5dp"
        app:trangleBackgroundNormal="#fae500"
        app:trangleHideEdge="true"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="bottom" />

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleTopHide"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/viewDialog"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/viewDialog"
        app:trangleBackgroundNormal="#ffffff"
        app:trangleHideEdge="true"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="top" />

    <com.tunasushi.tuna.TTrangleView
        android:id="@+id/trangleBottomHide"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/viewDialog"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/viewDialog"
        app:trangleBackgroundNormal="#ffffff"
        app:trangleHideEdge="true"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="bottom" />

    <com.tunasushi.tuna.TTrangleView
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/trangleTopHide"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/trangleTopHide"
        app:trangleBackgroundNormal="#ffffff"
        app:trangleHideEdge="true"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="left" />

    <com.tunasushi.tuna.TTrangleView
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/trangleBottomHide"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/trangleBottomHide"
        app:trangleBackgroundNormal="#ffffff"
        app:trangleHideEdge="true"
        app:trangleStrokeColor="#592d2e"
        app:trangleStrokeWidth="2dp"
        app:trangleTowardType="right" />

    <com.tunasushi.tuna.TView
        android:id="@+id/viewButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/trangleDialog"
        android:layout_margin="@dimen/tuna_button_margin"
        app:backgroundNormal="#592d2d"
        app:backgroundPress="#bc7955"
        app:radius="5dp"
        app:strokeColorNormal="#592d2d"
        app:strokeWidthNormal="1dp"
        app:textColorNormal="#ffffff"
        app:textSize="14dp"
        app:textValue="change the dialog name" />

</RelativeLayout>