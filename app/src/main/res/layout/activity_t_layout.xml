<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1eaee">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="TLayout用法参考TView"
        android:textColor="#434343" />

    <com.tunasushi.view.TLayout
        android:id="@+id/tLayout01"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutBackground="#fae500"
        app:layoutRadius="5dp"
        app:layoutStrokeColor="#ac9696"
        app:layoutStrokeWidth="1dp">

    </com.tunasushi.view.TLayout>

    <com.tunasushi.view.TLayout
        android:id="@+id/tLayout02"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/tLayout01"
        android:layout_margin="16dp"
        app:layoutBackground="#fae500"
        app:layoutBackgroundShadowColor="#998383"
        app:layoutBackgroundShadowDx="1dp"
        app:layoutBackgroundShadowDy="1dp"
        app:layoutBackgroundShadowRadius="2dp"
        app:layoutRadius="5dp">

    </com.tunasushi.view.TLayout>

    <com.tunasushi.view.TLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/tLayout02"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutBackgroundAngle="270"
        app:layoutBackgroundEnd="#ffca00"
        app:layoutBackgroundStart="#ffec95"
        app:layoutRadius="5dp"></com.tunasushi.view.TLayout>
</RelativeLayout>