<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.tunasushi.tuna.TScratch
        android:id="@+id/tScratch"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="@dimen/tuna_button_margin"
        android:layerType="software"
        app:scratchCoverColor="#000000"
        app:scratchCoverStrokeWidth="20dp"
        app:scratchRadius="10dp"
        app:scratchSrc="@drawable/tunaprogressbar_front"
        app:scratchText="TunaSashimi"
        app:scratchTextColor="#0000ff"
        app:scratchTextSize="22sp" />

</RelativeLayout>