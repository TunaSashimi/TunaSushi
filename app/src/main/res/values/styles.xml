<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Tuna_Anchor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Exclusive TView or any of its subclasses use -->

    <style name="TView_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="textSize">14dp</item>
        <item name="radius">5dp</item>
    </style>

    <style name="TView_TextMark_Red_Horizontal" parent="TView_Button">
        <item name="textMarkRadius">4dp</item>
        <item name="textMarkColor">#ff0000</item>
        <item name="textMark">true</item>
    </style>

    <style name="TView_TextMark_Red_Top" parent="TView_Button">
        <item name="textMarkRadius">4dp</item>
        <item name="textMarkColor">#ff0000</item>
        <item name="textMarkDy">-2dp</item>
        <item name="textMark">true</item>
    </style>

    <style name="TView_Text">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="textSize">12dp</item>
    </style>

    <!-- Considering only a layer arrangement ,according to the pattern is top, bottom, left, right, horizontal, vertical, in and out -->
    <style name="TView_RadioGroup_DrackBrown">
        <item name="android:layerType">software</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundNormal">#ffffff</item>
        <item name="backgroundPress">#bc7955</item>
        <item name="backgroundSelect">#592d2d</item>
        <item name="strokeWidthNormal">1dp</item>
        <item name="strokeColorNormal">#592d2d</item>
        <item name="textColorNormal">#592d2d</item>
        <item name="textColorPress">#ffffff</item>
        <item name="textColorSelect">#ffffff</item>
        <item name="textSize">16dp</item>
        <item name="selectType">same</item>
    </style>

    <!-- Considering only a layer arrangement ,according to the pattern is top, bottom, left, right, horizontal, vertical, in and out -->
    <style name="TView_RadioGroup_LightGray">
        <item name="android:layerType">software</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundNormal">#ffffff</item>
        <item name="backgroundPress">#9c9c9c</item>
        <item name="backgroundSelect">#574d4c</item>
        <item name="strokeWidthNormal">1dp</item>
        <item name="strokeColorNormal">#574d4c</item>
        <item name="textColorNormal">#574d4c</item>
        <item name="textColorPress">#ffffff</item>
        <item name="textColorSelect">#ffffff</item>
        <item name="textSize">16dp</item>
        <item name="selectType">same</item>
    </style>

    <style name="TView_RadioGroup_DrackBrown_Left" parent="TView_RadioGroup_DrackBrown">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">-1dp</item>
        <item name="radiusTopLeft">5dp</item>
        <item name="radiusBottomLeft">5dp</item>
        <item name="radiusTopRight">0dp</item>
        <item name="radiusBottomRight">0dp</item>
    </style>

    <style name="TView_RadioGroup_DrackBrown_Right" parent="TView_RadioGroup_DrackBrown">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="radiusTopLeft">0dp</item>
        <item name="radiusBottomLeft">0dp</item>
        <item name="radiusTopRight">5dp</item>
        <item name="radiusBottomRight">5dp</item>
    </style>

    <style name="TView_RadioGroup_LightGray_Left" parent="TView_RadioGroup_LightGray">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">-1dp</item>
        <item name="radiusTopLeft">5dp</item>
        <item name="radiusBottomLeft">5dp</item>
        <item name="radiusTopRight">0dp</item>
        <item name="radiusBottomRight">0dp</item>

        <!--  -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="textMarkColor">#ff0000</item>
        <item name="textMarkDy">-3dp</item>
        <item name="textMarkRadius">4dp</item>
    </style>

    <style name="TView_RadioGroup_LightGray_Right" parent="TView_RadioGroup_LightGray">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="radiusBottomLeft">0dp</item>
        <item name="radiusTopLeft">0dp</item>
        <item name="radiusBottomRight">5dp</item>
        <item name="radiusTopRight">5dp</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="textMarkColor">#ff0000</item>
        <item name="textMarkDy">-3dp</item>
        <item name="textMarkRadius">4dp</item>

    </style>

    <style name="TView_RadioGroup_LightGray_Horizontal" parent="TView_RadioGroup_LightGray">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="radiusTopLeft">0dp</item>
        <item name="radiusBottomLeft">0dp</item>
        <item name="radiusTopRight">0dp</item>
        <item name="radiusBottomRight">0dp</item>

        <!--  -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="textMarkColor">#ff0000</item>
        <item name="textMarkDy">-3dp</item>
        <item name="textMarkRadius">4dp</item>

    </style>

    <style name="TView_RadioGroup_LightGray_Whole" parent="TView_RadioGroup_LightGray">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="radiusTopLeft">5dp</item>
        <item name="radiusBottomLeft">5dp</item>
        <item name="radiusTopRight">5dp</item>
        <item name="radiusBottomRight">5dp</item>

    </style>

    <style name="TDialog_Choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="dialogWidth">280dp</item>
        <item name="dialogHeight">150dp</item>
        <item name="dialogBackground">#ffffff</item>
        <item name="dialogSurround">#80000000</item>

        <item name="dialogStrokeWidth">1dp</item>
        <item name="dialogStrokeColor">#dddddd</item>

        <item name="dialogTextSize">17dp</item>
        <item name="dialogTextColor">#333333</item>
        <item name="dialogTextDy">20dp</item>
        <item name="dialogTextTypeFace">bold</item>

        <item name="dialogContentSize">14dp</item>
        <item name="dialogContentColor">#62636c</item>
        <item name="dialogContentDy">-10dp</item>

        <item name="dialogContentPaddingLeft">60dp</item>
        <item name="dialogContentPaddingRight">60dp</item>

        <item name="dialogChoiceBackgroundNormal">#ffffff</item>
        <item name="dialogChoiceHeight">50dp</item>

        <item name="dialogChoiceSize">16dp</item>
        <item name="dialogChoiceColor">#1b307c</item>

        <item name="radius">4dp</item>

        <item name="android:visibility">invisible</item>
    </style>
</resources>
