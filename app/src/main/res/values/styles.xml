<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ViewAnchor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Exclusive TView or any of its subclasses use -->
    <style name="TViewButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="textSize">14dp</item>
        <item name="radius">5dp</item>
    </style>

    <style name="TViewTextMarkRedHorizontal" parent="TViewButton">
        <item name="textMarkRadius">4dp</item>
        <item name="textMarkColor">#ff0000</item>
        <item name="textMark">true</item>
    </style>

    <style name="TViewTextMarkRedTop" parent="TViewButton">
        <item name="textMarkRadius">4dp</item>
        <item name="textMarkColor">#ff0000</item>
        <item name="textMarkDy">-2dp</item>
        <item name="textMark">true</item>
    </style>

    <style name="TViewRect">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="textSize">12dp</item>
    </style>

    <style name="TViewGroupDrackBrown">
        <item name="android:layerType">software</item>
        <item name="backgroundNormal">#ffffff</item>
        <item name="backgroundPress">#bc7955</item>
        <item name="backgroundSelect">#592d2d</item>
        <item name="strokeWidthNormal">1dp</item>
        <item name="strokeColorNormal">#592d2d</item>
        <item name="textColorNormal">#592d2d</item>
        <item name="textColorPress">#ffffff</item>
        <item name="textColorSelect">#ffffff</item>
        <item name="textSize">16dp</item>
        <item name="selectMode">always</item>
    </style>

    <style name="TViewGroupDrackBrownStart" parent="TViewGroupDrackBrown">
        <item name="radiusTopLeft">5dp</item>
        <item name="radiusBottomLeft">5dp</item>
    </style>

    <style name="TViewGroupDrackBrownEnd" parent="TViewGroupDrackBrown">
        <item name="radiusTopRight">5dp</item>
        <item name="radiusBottomRight">5dp</item>
    </style>

    <style name="TViewGroupLightGray">
        <item name="android:layerType">software</item>
        <item name="backgroundNormal">#ffffff</item>
        <item name="backgroundPress">#9c9c9c</item>
        <item name="backgroundSelect">#574d4c</item>
        <item name="strokeWidthNormal">1dp</item>
        <item name="strokeColorNormal">#574d4c</item>
        <item name="textColorNormal">#574d4c</item>
        <item name="textColorPress">#ffffff</item>
        <item name="textColorSelect">#ffffff</item>
        <item name="textSize">16dp</item>
        <item name="selectMode">always</item>
    </style>

    <style name="TViewGroupLightGraySrart" parent="TViewGroupLightGray">
        <item name="radiusTopLeft">5dp</item>
        <item name="radiusBottomLeft">5dp</item>
    </style>

    <style name="TViewGroupLightGrayEnd" parent="TViewGroupLightGray">
        <item name="radiusBottomRight">5dp</item>
        <item name="radiusTopRight">5dp</item>
    </style>

    <style name="TViewGroupLightGrayOther" parent="TViewGroupLightGray" />

    <style name="TDialogChoice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="dialogWidth">280dp</item>
        <item name="dialogHeight">150dp</item>
        <item name="dialogBackground">#ffffff</item>
        <item name="dialogSurround">#80000000</item>

        <item name="dialogStrokeWidth">1dp</item>
        <item name="dialogStrokeColor">#dddddd</item>

        <item name="dialogTextSize">17dp</item>
        <item name="dialogTextColor">#333333</item>
        <item name="dialogTextDy">20dp</item>
        <item name="dialogTextMode">bold</item>

        <item name="dialogContentSize">14dp</item>
        <item name="dialogContentColor">#62636c</item>
        <item name="dialogContentDy">-10dp</item>

        <item name="dialogContentPaddingLeft">60dp</item>
        <item name="dialogContentPaddingRight">60dp</item>

        <item name="dialogChoiceBackgroundNormal">#ffffff</item>
        <item name="dialogChoiceHeight">50dp</item>

        <item name="dialogChoiceSize">16dp</item>
        <item name="dialogChoiceColor">#1b307c</item>

        <item name="radius">4dp</item>

        <item name="android:visibility">invisible</item>
    </style>
</resources>
