    </style>

    <style name="TunaView_RadioGroup_DrackBrown_Right" parent="TunaView_RadioGroup_DrackBrown">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/tuna_stroke_mask</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="radiusLeftTop">0dp</item>
        <item name="radiusLeftBottom">0dp</item>
        <item name="radiusRightTop">@dimen/tuna_radius</item>
